{
    "compilerOptions": {
        "module": "AMD",
        "moduleResolution": "node",
        "target": "es6",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "lib/",
        "allowJs": true,
        "lib": [
            "es2017", "es6", "dom",
        ],
    },
    "exclude": [
        "src/three",
        "node_modules",
        "electron",
        "assets",
        "dist",
        "build",
        "lib"
    ]
}